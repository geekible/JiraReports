{
  "ConnectionStrings": {
    "ConfigDb": "server=.;initial catalog=reportbuilderconfig; persist security info=True;user id=sa;password=Netlink412001!;MultipleActiveResultSets=true;TrustServerCertificate=True;"
  },
  "InfrastructureConfig": {
    "ExportFolderPath": "C:\\Temp\\"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Expressions" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@l = 'Information' or @l = 'Warning'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "C:\\temp\\report_builder.log",
                  "outputTemplate": "[{Timestamp:yyyy-MM-dd-HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}",
                  "rollingInterval": "Day"
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@l = 'Error' or @l = 'Fatal'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "C:\\temp\\report_builder_error.log",
                  "outputTemplate": "[{Timestamp:yyyy-MM-dd-HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}",
                  "rollingInterval": "Day"
                }
              }
            ]
          }
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "ApplicationName": "Daisy.Core.ApiCore"
    }
  },
  "AllowedHosts": "*"
}
